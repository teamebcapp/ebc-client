<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterIDActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#000000"
            android:text="뒤로가기"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/idText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/backButton"
            android:layout_marginTop="10dp"
            android:hint="아이디"
            android:inputType="textPersonName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/backButton"
            android:layout_alignStart="@+id/idText"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:text="*"
            android:textColor="#FF0000"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/passwordText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/idText"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:hint="비밀번호"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/passwordText"
            android:layout_below="@id/idText"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:text="*"
            android:textColor="#FF0000"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/passwordText2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/passwordText"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:hint="비밀번호확인"
            android:inputType="textPassword" />

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_alignEnd="@+id/passwordText2"
            android:layout_below="@id/passwordText"
            android:layout_alignTop="@+id/passwordText2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/passwordText"
            android:layout_alignStart="@id/passwordText2"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:text="*"
            android:textColor="#FF0000"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/nameText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/passwordText2"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:hint="이름"
            android:inputType="textPersonName"/>


        <EditText
            android:id="@+id/comText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameText"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="회사"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/posiText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/comText"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="직책"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/dutyText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/posiText"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:hint="직급"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/phoneText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dutyText"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:hint="휴대폰번호(010XXXXXXXX)"
            android:inputType="phone" />

        <EditText
            android:id="@+id/mailText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/phoneText"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="이메일"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/joinButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/mailText"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:background="#000000"
            android:text="회원가입"
            android:textColor="#ffffff" />
    </RelativeLayout>

</ScrollView>